{
  "name": "salesorder",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1",
    "@sap-cloud-sdk/http-client": "^4.0.2",
    "@sap-cloud-sdk/resilience": "^4.0.2",
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "express": "^4",
    "@cap-js/notifications": "*"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.10.0",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "mbt": "^1.2.29",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-orders": "cds watch --open orders/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy salesorder --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "watch-manage": "cds watch --open manage/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "sapux": [
    "app/admin-books",
    "app/browse",
    "app/orders",
    "app/manage"
  ],
  "cds": {
    "requires": {
      "notifications": {
        "types": "srv/notification-types.json"
      },
      "outbox": {
        "kind": "persistent-outbox",
        "maxAttempts": 20,
        "chunkSize": 100,
        "storeLastError": true,
        "parallel": true
      },
      "RewardService": {
        "kind": "odata",
        "model": "srv/rewards/index",
        "impl": "srv/rewards/index"
      },
      "InventoryService": {
        "kind": "odata",
        "model": "srv/inventory/index",
        "impl": "srv/inventory/index"
      },
      "auth": "xsuaa",
      "db":"hana",
      "connectivity": true,
      "destinations": true,
      "rewards-api": {
        "kind": "odata",
        "credentials": {
          "destination": "rewards-api"
        }
      },
      "inventory-api": {
        "kind": "odata",
        "credentials": {
          "destination": "inventory-api"
        }
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  }
}